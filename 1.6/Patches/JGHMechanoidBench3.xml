<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[JGH] Mechanoid Bench 3</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ========== Core ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Core</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- MechanoidBench_Bench -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="MechanoidBench_Bench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>ToolCabinet</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>