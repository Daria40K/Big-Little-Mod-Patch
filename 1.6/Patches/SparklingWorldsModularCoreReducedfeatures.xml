<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Sparkling Worlds - Modular Core - Reduced features</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ========== GiTS Cybernetic Equipment ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>GiTS Cybernetic Equipment</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- GlitterworldHospitalBedSW -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="GlitterworldHospitalBedSW"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>gitsAnchorConsole</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>