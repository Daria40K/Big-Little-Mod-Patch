<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[1.6] Moyo - Light in the Abyss</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ========== Core ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Core</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- RedMoyo_FabricationBench -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="RedMoyo_FabricationBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>ToolCabinet</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== RimLife Expansion Production Plus ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>RimLife Expansion Production Plus</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- RedMoyo_FabricationBench -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="RedMoyo_FabricationBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>RLE_PowerStabilizer</li>
									<li>RLE_IntegratedManagementDevice</li>
									<li>RLE_CMTCleaner</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== Vanilla Furniture Expanded - Production ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Vanilla Furniture Expanded - Production</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- RedMoyo_FabricationBench -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="RedMoyo_FabricationBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>VFE_FabricationCabinet</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>