<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>RR's Furniture pack-Collection Rapture</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ========== GloomyFurniture (Continued) ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>GloomyFurniture (Continued)</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- RRBasicBedBase | RRCrib -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[@Name="RRBasicBedBase" or defName="RRCrib"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>RGK_Dresser</li>
									<li>RGK_EndTable</li>
									<li>RGK_EndTableWithLamp</li>
									<li>RGK_EndTableWithLampE</li>
									<li>WardrobeA</li>
									<li>WardrobeB</li>
									<li>GL_Teddy</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== RR's Furniture pack-Collection Longyun ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>RR's Furniture pack-Collection Longyun</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- RRBasicBedBase | RRCrib -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[@Name="RRBasicBedBase" or defName="RRCrib"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>RRLincangDresser</li>
									<li>RRDalianWardrobe</li>
									<li>RRLijiangEndtable</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>