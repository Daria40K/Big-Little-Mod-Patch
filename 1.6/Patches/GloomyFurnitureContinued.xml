<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>GloomyFurniture (Continued)</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ========== RR's Furniture pack-Collection Longyun ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>RR's Furniture pack-Collection Longyun</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- RGK_bedSingle | RGK_bedSingleB | RGK_bedDouble | RGK_bedDoubleB | GL_ClassyDoubleBed -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="RGK_bedSingle" or defName="RGK_bedSingleB" or defName="RGK_bedDouble" or defName="RGK_bedDoubleB" or defName="GL_ClassyDoubleBed"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>RRLincangDresser</li>
									<li>RRDalianWardrobe</li>
									<li>RRLijiangEndtable</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== RR's Furniture pack-Collection Rapture ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>RR's Furniture pack-Collection Rapture</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- RGK_bedSingle | RGK_bedSingleB | RGK_bedDouble | RGK_bedDoubleB | GL_ClassyDoubleBed -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="RGK_bedSingle" or defName="RGK_bedSingleB" or defName="RGK_bedDouble" or defName="RGK_bedDoubleB" or defName="GL_ClassyDoubleBed"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>RRHeronaWardrobe</li>
									<li>RRTaragonaWardrobe</li>
									<li>RRDresser</li>
									<li>RRDresserTwo</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== VGP Garden Gourmet ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>VGP Garden Gourmet</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- RGK_FueledStove | GL_ElectricStove -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="RGK_FueledStove" or defName="GL_ElectricStove"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>CookingTools</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>