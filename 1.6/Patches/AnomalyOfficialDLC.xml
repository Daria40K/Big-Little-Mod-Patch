<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Anomaly [Official DLC]</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ========== Core ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Core</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- SerumCentrifuge | BioferriteShaper -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="SerumCentrifuge" or defName="BioferriteShaper"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>ToolCabinet</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== Cybernetic Storm ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Cybernetic Storm</li>
					</mods>
