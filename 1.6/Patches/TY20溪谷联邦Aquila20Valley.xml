<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[TY2.0]溪谷联邦 Aquila2.0-Valley</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ========== Core ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Core</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- TY_A_Nano_industrial_manufacturing_station | TY_A_Workbench_Building | TY_A_Corpse_Oil_Smelter -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="TY_A_Nano_industrial_manufacturing_station" or defName="TY_A_Workbench_Building" or defName="TY_A_Corpse_Oil_Smelter"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>ToolCabinet</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== GloomyFurniture (Continued) ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>GloomyFurniture (Continued)</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- TY_A_XG_PengRenTai -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="TY_A_XG_PengRenTai"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>GL_Cupboard</li>
									<li>GL_TablewareShelf</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== VGP Garden Gourmet ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>VGP Garden Gourmet</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- TY_A_XG_PengRenTai -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="TY_A_XG_PengRenTai"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>CookingTools</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== [LTS]Furnishing ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>[LTS]Furnishing</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- TY_A_XG_PengRenTai -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="TY_A_XG_PengRenTai"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>LTS_Sink</li>
									<li>LTS_Fridge</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>