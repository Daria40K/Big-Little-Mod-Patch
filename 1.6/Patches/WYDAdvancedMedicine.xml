<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[WYD] Advanced Medicine</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ========== Core ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Core</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- WYD_AdvancedDrugLab -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="WYD_AdvancedDrugLab"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>ToolCabinet</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== RimLife Expansion Production Plus ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>RimLife Expansion Production Plus</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- WYD_AdvancedDrugLab -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="WYD_AdvancedDrugLab"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>RLE_PowerStabilizer</li>
									<li>RLE_IntegratedManagementDevice</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== Vanilla Furniture Expanded - Production ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Vanilla Furniture Expanded - Production</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- WYD_AdvancedDrugLab -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="WYD_AdvancedDrugLab"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>VFE_DrugCabinet</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== [LTS]Furnishing ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>[LTS]Furnishing</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- WYD_AdvancedDrugLab -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="WYD_AdvancedDrugLab"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>LTS_Fridge</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>