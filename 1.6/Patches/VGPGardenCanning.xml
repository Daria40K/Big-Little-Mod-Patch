<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Garden Canning</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ========== GloomyFurniture (Continued) ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>GloomyFurniture (Continued)</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- CanningFactory -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="CanningFactory"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>GL_Cupboard</li>
									<li>GL_TablewareShelf</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== VGP Garden Gourmet ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>VGP Garden Gourmet</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- CanningFactory -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="CanningFactory"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>CookingTools</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== [LTS]Furnishing ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>[LTS]Furnishing</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- CanningFactory -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="CanningFactory"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>LTS_Sink</li>
									<li>LTS_Fridge</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>