                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="TWB_FueledStoveMini"]/comps/li[@Class ="CompProperties_AffectedByFacilities"]</xpath>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>/Defs/ThingDef[defName="TWB_FueledStoveMini"]/comps</xpath>
