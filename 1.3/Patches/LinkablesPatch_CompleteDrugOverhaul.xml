<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--
		========== The Complete Drug Overhaul (Continued) ==========

		ADVDrugLab | #drug
	-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>The Complete Drug Overhaul (Continued)</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ========== Akeron Decorations ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Akeron Decorations</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
                            <!-- ADVDrugLab -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="ADVDrugLab"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>AKN_MotivatingPlush</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

                <!-- ========== Medical Supplements (Continued) ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Medical Supplements (Continued)</li>
					</mods>

					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
                            <!-- MP_SmallDrugLab -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="MP_SmallDrugLab"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>DrugCabinet</li>
                                </value>
                            </li>
						</operations>
					</match>
				</li>

				<!-- ========== Medieval Overhaul ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Medieval Overhaul</li>
					</mods>

					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
                            <!-- ADVDrugLab -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="ADVDrugLab"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>DankPyon_ToolRack</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== More Linkables ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>More Linkables</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- ADVDrugLab -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="ADVDrugLab"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>ToolCabinetA</li>
									<li>ToolCabinetB</li>
									<li>ToolCabinetC</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

				<!-- ========== [O21] Outland - Core ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>[O21] Outland - Core</li>
					</mods>

					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- ADVDrugLab -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="ADVDrugLab"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Outland_Grindstone</li>
                                </value>
                            </li>
						</operations>
					</match>
				</li>

                <!-- ========== Vanilla Furniture Expanded - Production ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Vanilla Furniture Expanded - Production</li>
					</mods>
			
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- ADVDrugLab -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="ADVDrugLab"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>VFE_DrugCabinet</li>
                                </value>
                            </li>
						</operations>
					</match>
				</li>

                <!-- ========== Vault-Tec - Handy things for your vault! ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Vault-Tec - Handy things for your vault!</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- ADVDrugLab -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="ADVDrugLab"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Vt_server</li>
									<li>vtcompter</li>
                                </value>
                            </li>
						</operations>
					</match>
				</li>

				<!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>WorkBench Support - More Linkable Facilities -</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- ADVDrugLab -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="ADVDrugLab"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Link_DrugLabGoods</li>
                                    <li>Link_DrugLabBoost</li>
                                    <li>Link_UniversalCabinet</li>
                                </value>
                            </li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>