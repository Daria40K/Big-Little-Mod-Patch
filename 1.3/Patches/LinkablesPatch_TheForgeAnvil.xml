<?xml version="1.0" encoding="utf-8"?>
<!--
    ========== [JDS] The Forge - Anvil ==========

    JDSForgeBenchBase
    JDSAnvil
    JDSWorkBench
    JDSForge
    JDSForgeFabricationbench
-->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[JDS] The Forge - Anvil</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
                <!-- ========== Akeron Decorations ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Akeron Decorations</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
                            <!-- JDSForgeBenchBase -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[@Name = "JDSForgeBenchBase"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
									<li>AKN_MotivatingPlush</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

                <!-- ========== Medieval Overhaul ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Medieval Overhaul</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- JDSForgeBenchBase -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[@Name = "JDSForgeBenchBase"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>DankPyon_QuenchingBucket</li>
                                    <li>DankPyon_Bellows</li>
                                    <li>DankPyon_ToolRack</li>
                                    <li>DankPyon_Grinder</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== More Linkables ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>More Linkables</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- JDSForgeBenchBase -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[@Name = "JDSForgeBenchBase"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>ToolCabinetA</li>
									<li>ToolCabinetB</li>
									<li>ToolCabinetC</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== [O21] Outland - Core ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>[O21] Outland - Core</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- JDSForgeBenchBase -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[@Name="JDSForgeBenchBase"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Outland_Grindstone</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Vanilla Furniture Expanded - Production ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Furniture Expanded - Production</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- JDSForgeBenchBase -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[@Name = "JDSForgeBenchBase"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>VFE_SmithyCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>WorkBench Support - More Linkable Facilities -</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- JDSForgeBenchBase -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[@Name = "JDSForgeBenchBase"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Link_SmelterGoods</li>
                                    <li>Link_SmelterBoost</li>
                                    <li>Link_UniversalCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>