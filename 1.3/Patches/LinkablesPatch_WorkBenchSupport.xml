<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!--
        daylight.wbsmorelinkf = WorkBench Support - More Linkable Facilities -
        
        Link_ArtGoods = Art tools storage table
        Link_ArtBoost = Electric-powered tools storage table for art
        Link_BreweryGoods = Brewing tools storage table
        Link_BreweryBoost = Brewing agitator
        Link_ButcherGoods = Butchering tools storage table
        Link_ButcherBoost = Disposal box for inedible parts
        Link_DrugLabGoods = Chemical mixing tools storage table
        Link_DrugLabBoost = Electric tools storage table for chemical mixing
        Link_FabricationBoost = Advanced fabricating support device
        Link_KitchenGoods = Cookware storage table
        Link_KitchenBoost = Extended cooker
        Link_MachiningGoods = Machining tool storage table
        Link_MachiningBoost = Electric-powered tools storage table for machining
        Link_RefineryBoost = Accelerated chemical reaction furnace
        Link_ResearchGoods = Research items storage table
        Link_ResearchBoost = Microanalyzer
        Link_SmelterGoods = Smelting tools storage table
        Link_SmelterBoost = Waste Heat recovery system for electric smelter
        Link_SmithingGoods = Smithing tools storage table
        Link_SmithingBoost = Waste Heat Recovery System for smithy
        Link_StoneCutterGoods = Stone cutting tools storage table
        Link_StoneCutterBoost = Stone cutting electric-power tools Storage table
        Link_TailorGoods = Tailoring tools storage table
        Link_TailorBoost = Small automatic loom
        ==Link_UniversalCabinet = Universal cabinet
    -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>WorkBench Support - More Linkable Facilities -</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationInsert">
                    <xpath>Defs/ThingDef/comps/li/linkableFacilities/li[text()="ToolCabinet"]</xpath>
                    <value>
                        <li>Link_UniversalCabinet</li><!-- WorkBench Support - More Linkable Facilities - -->
                    </value>
                </li>

                <li Class="PatchOperationInsert">
					<xpath>Defs/ThingDef/comps/li/linkableFacilities/li[text()="MultiAnalyzer"]</xpath>
					<value>
						<li>Link_ResearchGoods</li><!-- WorkBench Support - More Linkable Facilities - -->
                        <li>Link_ResearchBoost</li><!-- WorkBench Support - More Linkable Facilities - -->
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>