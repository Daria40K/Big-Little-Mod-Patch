<?xml version="1.0" encoding="utf-8"?>
<!--
    ========== Mechalit Faction v2 ==========
    
    MechaWorkbench
-->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Mechalit Faction v2</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
                <!-- ========== Akeron Decorations ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Akeron Decorations</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
                            <!-- MechaWorkbench -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="MechaWorkbench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>AKN_MotivatingPlush</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

                <!-- ========== Medieval Overhaul ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Medieval Overhaul</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- MechaWorkbench -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="MechaWorkbench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>DankPyon_QuenchingBucket</li>
                                    <li>DankPyon_Bellows</li>
                                    <li>DankPyon_ToolRack</li>
                                    <li>DankPyon_Grinder</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== More Linkables ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>More Linkables</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- MechaWorkbench -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="MechaWorkbench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>ToolCabinetA</li>
									<li>ToolCabinetB</li>
									<li>ToolCabinetC</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

				<!-- ========== [O21] Outland - Core ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>[O21] Outland - Core</li>
					</mods>

					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- MechaWorkbench -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="MechaWorkbench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Outland_Grindstone</li>
                                </value>
                            </li>
						</operations>
					</match>
				</li>

                <!-- ========== UN-Furniture ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>UN-Furniture (Continued)</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- MechaWorkbench -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="MechaWorkbench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>SadjuukShaper</li>
                                    <li>SadjuukGrinding</li>
                                    <li>SadjuukLathe</li>
                                    <li>SadjuukMilling</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Vanilla Furniture Expanded - Production ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Furniture Expanded - Production</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- MechaWorkbench -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="MechaWorkbench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>VFE_MachiningCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
                            

                <!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>WorkBench Support - More Linkable Facilities -</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- MechaWorkbench -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="MechaWorkbench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Link_MachiningGoods</li>
                                    <li>Link_MachiningBoost</li>
                                    <li>Link_UniversalCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>