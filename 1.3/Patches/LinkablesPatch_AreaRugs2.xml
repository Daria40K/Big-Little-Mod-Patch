<?xml version="1.0" encoding="utf-8"?>
<!--
    ========== Area Rugs 2.0 ==========

    TableRugMaking
-->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Area Rugs 2.0</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
                <!-- ========== Medieval Overhaul ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Medieval Overhaul</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- TableRugMaking -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="TableRugMaking"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>DankPyon_ToolRack</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Vanilla Furniture Expanded - Production ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Furniture Expanded - Production</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- TableRugMaking -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="TableRugMaking"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>VFE_TailorCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
                            

                <!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>WorkBench Support - More Linkable Facilities -</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- TableRugMaking -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="TableRugMaking"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Link_TailorGoods</li>
                                    <li>Link_TailorBoost</li>
                                    <li>Link_UniversalCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>