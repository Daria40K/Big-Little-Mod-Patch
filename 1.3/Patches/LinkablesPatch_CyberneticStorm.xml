<?xml version="1.0" encoding="utf-8"?>
<!--
    ========== Cybernetic Storm ==========

    CS_NanoTech_Bench
    CS_MaterialsBench
-->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Cybernetic Storm</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
                <!-- ========== Medieval Overhaul ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Medieval Overhaul</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- CS_NanoTech_Bench | CS_MaterialsBench -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName = "CS_NanoTech_Bench" or defName="CS_MaterialsBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>DankPyon_QuenchingBucket</li>
                                    <li>DankPyon_Bellows</li>
                                    <li>DankPyon_ToolRack</li>
                                    <li>DankPyon_Grinder</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Tabletop Decorations ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Tabletop Decorations</li>
					</mods>

					<match Class="PatchOperationSequence">
						<operations>
							<!-- CS_NanoTech_Bench | CS_MaterialsBench -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName = "CS_NanoTech_Bench" or defName="CS_MaterialsBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
									<li>ucp_vise</li>
									<li>ucp_toolbox</li>
									<li>ucp_screwdrivers</li>
									<li>ucp_hammer</li>
									<li>ucp_aerosol</li>
									<li>ucp_wrench</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

                <!-- ========== UN-Furniture ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>UN-Furniture (Continued)</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- CS_NanoTech_Bench | CS_MaterialsBench -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName = "CS_NanoTech_Bench" or defName="CS_MaterialsBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>SadjuukShaper</li>
                                    <li>SadjuukGrinding</li>
                                    <li>SadjuukLathe</li>
                                    <li>SadjuukMilling</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Vanilla Furniture Expanded - Production ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Furniture Expanded - Production</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- CS_NanoTech_Bench | CS_MaterialsBench -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName = "CS_NanoTech_Bench" or defName="CS_MaterialsBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>VFE_MachiningCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
                
                <!-- ========== WallStuff ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>WallStuff</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- CS_NanoTech_Bench | CS_MaterialsBench -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName = "CS_NanoTech_Bench" or defName="CS_MaterialsBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>WallToolBoard</li>
                                </value>
                            </li>
						</operations>
					</match>
				</li>

                <!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>WorkBench Support - More Linkable Facilities -</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- CS_NanoTech_Bench | CS_MaterialsBench -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName = "CS_NanoTech_Bench" or defName="CS_MaterialsBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Link_MachiningGoods</li>
                                    <li>Link_MachiningBoost</li>
                                    <li>Link_UniversalCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>