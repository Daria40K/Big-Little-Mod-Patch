		<mods>
			<li>UN-Furniture</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationInsert">
					<xpath>Defs/ThingDef/comps/li/linkableFacilities/li[text()="Dresser"]</xpath>
					<value>
						<li>SadjuukFurnitureBA</li><!-- UN-Furniture -->
						<li>SadjuukFurnitureBB</li><!-- UN-Furniture -->
                        <li>SadjuukFurnitureBC</li><!-- UN-Furniture -->
					</value>
				</li>

				<li Class="PatchOperationInsert">
					<xpath>Defs/ThingDef/comps/li/linkableFacilities/li[text()="EndTable"]</xpath>
					<value>
						<li>SadjuukFurnitureAA</li><!-- UN-Furniture -->
			            <li>SadjuukFurnitureAB</li><!-- UN-Furniture -->
			            <li>SadjuukFurnitureAC</li><!-- UN-Furniture -->
					</value>
				</li>

				<li Class="PatchOperationInsert">
                    <xpath>Defs/ThingDef/comps/li/linkableFacilities/li[text()="VitalsMonitor"]</xpath>
                    <value>
                        <li>SadjuukSurgeryAA</li><!-- UN-Furniture -->
                        <li>SadjuukSurgeryAB</li><!-- UN-Furniture -->
                        <li>SadjuukSurgeryAC</li><!-- UN-Furniture -->
                        <li>SadjuukSurgeryAD</li><!-- UN-Furniture -->
                    </value>
                </li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "SadjuukBedAA" or defName = "SadjuukBedBA"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
					<value>
						<li>EndTable</li>
						<li>Dresser</li>
					</value>
				</li>

                <li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "SadjuukSurgeryBA"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
					<value>
						<li>EndTable</li>
						<li>Dresser</li>
                        <li>VitalsMonitor</li>
					</value>
				</li>
			</operations>
		</match>
