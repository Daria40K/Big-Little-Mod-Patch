				<li Class="PatchOperationFindMod">
					<mods>
						<li>Vanilla Furniture Expanded - Production</li>
					</mods>
			
					<match Class="PatchOperationSequence">
						<operations>
							<!-- AMW_Salvager -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName = "AMW_Salvager"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>VFE_MachiningCabinet</li>
                                </value>
                            </li>
						</operations>
					</match>
				</li>

				<!-- ========== Vault-Tec - Handy things for your vault! ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Vault-Tec - Handy things for your vault!</li>
