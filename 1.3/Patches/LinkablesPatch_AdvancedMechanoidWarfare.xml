								<xpath>Defs/ThingDef[defName="AMW_Salvager"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>DankPyon_ToolRack</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== More Linkables ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>More Linkables</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- AMW_Salvager -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName="AMW_Salvager"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>ToolCabinetA</li>
									<li>ToolCabinetB</li>
									<li>ToolCabinetC</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

				<!-- ========== [O21] Outland - Core ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>[O21] Outland - Core</li>
					</mods>

					<match Class="PatchOperationSequence">
