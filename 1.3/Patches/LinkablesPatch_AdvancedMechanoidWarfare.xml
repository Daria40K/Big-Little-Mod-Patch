                                    <li>Outland_Grindstone</li>
                                </value>
                            </li>
						</operations>
					</match>
				</li>

                <!-- ========== UN-Furniture ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>UN-Furniture (Continued)</li>
					</mods>

					<match Class="PatchOperationSequence">
						<operations>
                            <!-- AMW_Salvager -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="AMW_Salvager"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
