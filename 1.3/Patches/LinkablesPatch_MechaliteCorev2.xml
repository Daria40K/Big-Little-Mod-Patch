<?xml version="1.0" encoding="utf-8"?>
<!--
	EliteDresserMeh = elite dresser
-->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Mechalit Core v2</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationInsert">
					<xpath>Defs/ThingDef/comps/li/linkableFacilities/li[text()="Dresser"]</xpath>
					<value>
						<li>EliteDresserMeh</li><!-- Mechalit Core v2 -->
					</value>
				</li>

				<!-- Ideology [Official DLC] -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Ideology</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/ThingDef[
									defName = "EliteBed" or 
									defName = "EliteDoubleBed" or 
									defName = "FirstClassBed"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>SleepAccelerator</li><!-- Ideology [Official DLC] -->
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>