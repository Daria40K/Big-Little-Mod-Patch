								<success>Always</success>
								<xpath>/Defs/ThingDef[defName="RE_SpacerTechResearchBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>AIUpliftAssistantAUA</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

