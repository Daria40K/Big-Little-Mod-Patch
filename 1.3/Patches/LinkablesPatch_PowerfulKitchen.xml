<?xml version="1.0" encoding="utf-8"?>
<!--
	========== Powerful Kitchen ==========

	RLE_ElectButcher
    RLE_KitchenTable
-->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Powerful Kitchen</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
                <!-- ========== GloomyFurniture ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>GloomyFurniture</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- RLE_KitchenTable -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[@Name="RLE_KitchenTable"]/comps/li[@Class ="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>GL_Cupboard</li><!-- GloomyFurniture -->
						            <li>GL_TablewareShelf</li><!-- GloomyFurniture -->
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Gloomy Extra - Kitchen ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Gloomy Extra - Kitchen</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- RLE_KitchenTable -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[@Name="RLE_KitchenTable"]/comps/li[@Class ="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>SM_Sink</li>
						            <li>SM_KitchenCupboard_A</li>
                                    <li>SM_KitchenCupboard_B</li>
                                    <li>SM_KitchenCupboard_C</li>
                                </value>
                            </li>

                            <!-- RLE_ElectButcher -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>/Defs/ThingDef[defName="RLE_ElectButcher"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>SM_Sink</li>
									<li>SM_ButcherShelf</li>
									<li>SM_KitchenCupboard_A</li>
									<li>SM_KitchenCupboard_B</li>
									<li>SM_KitchenCupboard_C</li>
								</value>
							</li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Medieval Overhaul ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Medieval Overhaul</li>
					</mods>
			
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- RLE_KitchenTable -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[@Name="RLE_KitchenTable"]/comps/li[@Class ="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
									<li>DankPyon_RusticCookingTools</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

                <!-- ========== More Linkables ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>More Linkables</li>
					</mods>

					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- RLE_KitchenTable -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[@Name="RLE_KitchenTable"]/comps/li[@Class ="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
									<li>KitchenCupboard</li>
								</value>
							</li>

							<!-- RLE_ElectButcher -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>/Defs/ThingDef[defName = "RLE_ElectButcher"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>KitchenCupboard</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

                <!-- ========== Vanilla Furniture Expanded - Production ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Vanilla Furniture Expanded - Production</li>
					</mods>
			
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- RLE_KitchenTable -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[@Name="RLE_KitchenTable"]/comps/li[@Class ="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
									<li>VFE_KitchenSinkCabinet</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

                <!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>WorkBench Support - More Linkable Facilities -</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- RLE_KitchenTable -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[@Name="RLE_KitchenTable"]/comps/li[@Class ="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Link_KitchenGoods</li>
                                    <li>Link_KitchenBoost</li>
                                    <li>Link_UniversalCabinet</li>
                                </value>
                            </li>

                            <!-- RLE_ElectButcher -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>/Defs/ThingDef[defName = "RLE_ElectButcher"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>Link_ButcherGoods</li>
									<li>Link_ButcherBoost</li>
									<li>Link_UniversalCabinet</li>
								</value>
							</li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>