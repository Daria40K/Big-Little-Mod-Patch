<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- ========== Xenite Industries: Mechanite District ==========

		MDadvAssembler
	-->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Xenite Industries: Mechanite District</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!-- MDadvAssembler -->
                <li Class="PatchOperationConditional">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="MDadvAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]</xpath>
                    <nomatch Class="PatchOperationAdd">
                        <success>Always</success>
                        <xpath>/Defs/ThingDef[defName="MDadvAssembler"]/comps</xpath>
                        <value>
                            <li Class="CompProperties_AffectedByFacilities">
                                <linkableFacilities>
                                    <li>ToolCabinet</li>
                                </linkableFacilities>
                            </li>
                        </value>
                    </nomatch>
                </li>

                <li Class="PatchOperationConditional">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="MDadvAssembler"]/placeWorkers/li[text()="PlaceWorker_ShowFacilitiesConnections"]</xpath>
                    <nomatch Class="PatchOperationAdd">
                        <success>Always</success>
                        <xpath>/Defs/ThingDef[defName="MDadvAssembler"]/placeWorkers</xpath>
                        <value>
                            <li>PlaceWorker_ShowFacilitiesConnections</li>
                        </value>
                    </nomatch>
                </li>

                <!-- ========== Medieval Overhaul ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Medieval Overhaul</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- MDadvAssembler -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[defName="MDadvAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>DankPyon_ToolRack</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== UN-Furniture ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>UN-Furniture (Continued)</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- MDadvAssembler -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[defName="MDadvAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>SadjuukShaper</li>
                                    <li>SadjuukGrinding</li>
                                    <li>SadjuukLathe</li>
                                    <li>SadjuukMilling</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Vanilla Furniture Expanded - Production ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Furniture Expanded - Production</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- MDadvAssembler -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[defName="MDadvAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>VFE_MachiningCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>WorkBench Support - More Linkable Facilities -</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- MDadvAssembler -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[defName="MDadvAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Link_MachiningGoods</li>
                                    <li>Link_MachiningBoost</li>
                                    <li>Link_UniversalCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
                            
            </operations>
        </match>
    </Operation>
</Patch>