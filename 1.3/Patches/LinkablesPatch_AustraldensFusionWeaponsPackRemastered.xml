<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--
		========== Australden's Fusion Weapons Pack Remastered ==========

		ParticleAssembler | #fabrication
	-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Australden's Fusion Weapons Pack Remastered</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ========== Akeron Decorations ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Akeron Decorations</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- ParticleAssembler -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="ParticleAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>AKN_MotivatingPlush</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== Medieval Overhaul ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Medieval Overhaul</li>
					</mods>

					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- ParticleAssembler -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="ParticleAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>DankPyon_ToolRack</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== More Linkables ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>More Linkables</li>
					</mods>

					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- ParticleAssembler -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="ParticleAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>ToolCabinetA</li>
									<li>ToolCabinetB</li>
									<li>ToolCabinetC</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== [O21] Outland - Core ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>[O21] Outland - Core</li>
					</mods>

					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- ParticleAssembler -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="ParticleAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>Outland_Grindstone</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== Tabletop Decorations ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Tabletop Decorations</li>
					</mods>

					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- __TemplateToolcabinet__ -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="__TemplateToolcabinet__"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>ucp_aerosol</li>
									<li>ucp_blueprint</li>
									<li>ucp_roboarm</li>
									<li>ucp_toolbox</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== UN-Furniture ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>UN-Furniture (Continued)</li>
					</mods>

					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- ParticleAssembler -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="ParticleAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>SadjuukShaper</li>
									<li>SadjuukGrinding</li>
									<li>SadjuukLathe</li>
									<li>SadjuukMilling</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== Vanilla Furniture Expanded - Production ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Vanilla Furniture Expanded - Production</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- ParticleAssembler -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="ParticleAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>VFE_FabricationCabinet</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== Vault-Tec - Handy things for your vault! ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Vault-Tec - Handy things for your vault!</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- ParticleAssembler -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="ParticleAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>Vt_server</li>
									<li>vtcompter</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>WorkBench Support - More Linkable Facilities -</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- ParticleAssembler -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="ParticleAssembler"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>Link_FabricationBoost</li>
									<li>Link_UniversalCabinet</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>