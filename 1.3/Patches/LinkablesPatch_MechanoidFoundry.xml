<?xml version="1.0" encoding="utf-8"?>
<!--
    ========== Mechanoid Foundry ==========

    MF_MechanoidFoundry
-->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Mechanoid Foundry</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
                <!-- ========== Medieval Overhaul ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Medieval Overhaul</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- MF_MechanoidFoundry -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[defName="MF_MechanoidFoundry"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>DankPyon_QuenchingBucket</li>
                                    <li>DankPyon_Bellows</li>
                                    <li>DankPyon_ToolRack</li>
                                    <li>DankPyon_Grinder</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== UN-Furniture ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>UN-Furniture (Continued)</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- MF_MechanoidFoundry -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[defName="MF_MechanoidFoundry"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>SadjuukShaper</li>
                                    <li>SadjuukGrinding</li>
                                    <li>SadjuukLathe</li>
                                    <li>SadjuukMilling</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Vanilla Furniture Expanded - Production ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Furniture Expanded - Production</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- MF_MechanoidFoundry -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[defName="MF_MechanoidFoundry"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>VFE_MachiningCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
                            

                <!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>WorkBench Support - More Linkable Facilities -</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- MF_MechanoidFoundry -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>/Defs/ThingDef[defName="MF_MechanoidFoundry"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Link_MachiningGoods</li>
                                    <li>Link_MachiningBoost</li>
                                    <li>Link_UniversalCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>