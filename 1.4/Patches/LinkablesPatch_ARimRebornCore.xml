                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="ARR_AetherPrepTable" or defName="ARR_AetherPrepTableLinked"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
