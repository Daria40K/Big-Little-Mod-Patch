<?xml version="1.0" encoding="utf-8"?>
<!--
    ========== Vanilla Genetics Expanded - More Lab Stuff ==========

    GR_GenetrainerBench
-->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Genetics Expanded - More Lab Stuff</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
                <!-- ========== RimWorld ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Core</li>
                    </mods>
            
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- GR_GenetrainerBench -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="GR_GenetrainerBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>ToolCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Akeron Decorations ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Akeron Decorations</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
                            <!-- GR_GenetrainerBench -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="GR_GenetrainerBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
									<li>AKN_MotivatingPlush</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

                <!-- ========== More Linkables ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>More Linkables</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- GR_GenetrainerBench -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="GR_GenetrainerBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>ToolCabinetA</li>
									<li>ToolCabinetB</li>
									<li>ToolCabinetC</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Tabletop Decorations ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Tabletop Decorations</li>
					</mods>

					<match Class="PatchOperationSequence">
						<operations>
							<!-- GR_GenetrainerBench -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="GR_GenetrainerBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>ucp_toolbox</li>
                                </value>
                            </li>
						</operations>
					</match>
				</li>

                <!-- ========== Vanilla Furniture Expanded - Production ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Furniture Expanded - Production</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- GR_GenetrainerBench -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="GR_GenetrainerBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>VFE_FabricationCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== WallStuff ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>WallStuff</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- GR_GenetrainerBench -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="GR_GenetrainerBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>WallToolBoard</li>
                                </value>
                            </li>
						</operations>
					</match>
				</li>
                            

                <!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>WorkBench Support - More Linkable Facilities -</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <success>Always</success>
                        <operations>
                            <!-- GR_GenetrainerBench -->
                            <li Class="PatchOperationAdd">
                                <success>Always</success>
                                <xpath>Defs/ThingDef[defName="GR_GenetrainerBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Link_FabricationBoost</li>
                                    <li>Link_UniversalCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>