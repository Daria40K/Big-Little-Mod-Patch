<?xml version="1.0" encoding="utf-8"?>
<!--
    ========== Powerful Smelte ==========

    RLE_SmelterTable | #smelter
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Powerful Smelter</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!-- ========== Akeron - Decorations ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Akeron - Decorations</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- RLE_SmelterTable -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[@Name="RLE_SmelterTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>AKN_MotivatingPlush</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Medieval Overhaul ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Medieval Overhaul</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- RLE_SmelterTable -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[@Name="RLE_SmelterTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>DankPyon_QuenchingBucket</li>
                                    <li>DankPyon_Bellows</li>
                                    <li>DankPyon_ToolRack</li>
                                    <li>DankPyon_Grinder</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== [O21] Outland - Core ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>[O21] Outland - Core</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- RLE_SmelterTable -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[@Name="RLE_SmelterTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Outland_Grindstone</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Tabletop Decorations ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Tabletop Decorations</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- RLE_SmelterTable -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName="RLE_SmelterTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>ucp_tongs</li>
                                    <li>ucp_ballpeen</li>
                                    <li>ucp_toolbox</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== UN-Furniture ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>UN-Furniture (Continued)</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- RLE_SmelterTable -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[@Name="RLE_SmelterTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>SadjuukShaper</li>
                                    <li>SadjuukGrinding</li>
                                    <li>SadjuukLathe</li>
                                    <li>SadjuukMilling</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== WallStuff ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>WallStuff</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- RLE_SmelterTable -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName="RLE_SmelterTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>WallToolBoard</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>WorkBench Support - More Linkable Facilities -</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- RLE_SmelterTable -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[@Name="RLE_SmelterTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Link_SmelterGoods</li>
                                    <li>Link_SmelterBoost</li>
                                    <li>Link_UniversalCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>