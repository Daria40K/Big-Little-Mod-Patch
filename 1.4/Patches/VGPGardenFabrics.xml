<?xml version="1.0" encoding="utf-8"?>
<!--
    ========== VGP Garden Fabrics ==========

    TableLoom | #toolcabinet #tailor
    TableElecLoom | #toolcabinet #tailor
-->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Garden Fabrics</li>
            <li>VGP Garden Fabrics Simplified</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
            <!-- ========== Akeron - Decorations ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Akeron - Decorations</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
                            <!-- TableLoom | TableElecLoom -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="TableLoom" or defName="TableElecLoom"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>AKN_MotivatingPlush</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

                <!-- ========== Even More Linkables ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Even More Linkables</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
                            <!-- TableLoom -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="TableLoom"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>HobbesLink_CNCMachine</li>
									<li>HobbesLink_3DPrinter</li>
									<li>HobbesLink_RobotAssistant</li>
									<li>HobbesLink_Lathe</li>
									<li>HobbesLink_Spacer_Lathe</li>
									<li>HobbesLink_Vice</li>
									<li>HobbesLink_Centrifuge</li>
									<li>HobbesLink_LaserEngraver</li>
									<li>HobbesLink_IndustrialOven</li>
									<li>HobbesLink_ConveyorBelt</li>
									<li>HobbesLink_Incinerator</li>
									<li>HobbesLink_Still</li>
									<li>HobbesLink_Rotovape</li>
									<li>HobbesLink_TabletopCentrifuge</li>
									<li>HobbesLink_TabletopStove</li>
									<li>HobbesLink_TabletopLabTubeRack</li>
								</value>
                            </li>

                            <!-- TableElecLoom -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="TableElecLoom"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>HobbesLink_CNCMachine</li>
									<li>HobbesLink_3DPrinter</li>
									<li>HobbesLink_RobotAssistant</li>
									<li>HobbesLink_Lathe</li>
									<li>HobbesLink_Spacer_Lathe</li>
									<li>HobbesLink_Vice</li>
									<li>HobbesLink_Centrifuge</li>
									<li>HobbesLink_LaserEngraver</li>
									<li>HobbesLink_IndustrialOven</li>
									<li>HobbesLink_ConveyorBelt</li>
									<li>HobbesLink_Incinerator</li>
									<li>HobbesLink_Still</li>
									<li>HobbesLink_Rotovape</li>
									<li>HobbesLink_TabletopCentrifuge</li>
									<li>HobbesLink_TabletopStove</li>
									<li>HobbesLink_TabletopLabTubeRack</li>
								</value>
                            </li>
						</operations>
					</match>
				</li>

                <!-- ========== Medieval Overhaul ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Medieval Overhaul</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- TableLoom | TableElecLoom -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="TableLoom" or defName="TableElecLoom"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
                                    <li>DankPyon_ToolRack</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Tabletop Decorations ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Tabletop Decorations</li>
					</mods>

					<match Class="PatchOperationSequence">
						<operations>
                            <!-- TableLoom | TableElecLoom -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="TableLoom" or defName="TableElecLoom"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>ucp_measure</li>
									<li>ucp_scraps</li>
									<li>ucp_textileroll</li>
									<li>ucp_pencil</li>
									<li>ucp_toolbox</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

                <!-- ========== Vanilla Furniture Expanded - Production ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Furniture Expanded - Production</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- TableLoom | TableElecLoom -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="TableLoom" or defName="TableElecLoom"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
                                    <li>VFE_TailorCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== WallStuff ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>WallStuff</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
                            <!-- TableLoom | TableElecLoom -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="TableLoom" or defName="TableElecLoom"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
                                    <li>WallToolBoard</li>
                                </value>
                            </li>
						</operations>
					</match>
				</li>

                <!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>WorkBench Support - More Linkable Facilities -</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- TableLoom | TableElecLoom -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="TableLoom" or defName="TableElecLoom"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
                                    <li>Link_TailorGoods</li>
                                    <li>Link_TailorBoost</li>
                                    <li>Link_UniversalCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>