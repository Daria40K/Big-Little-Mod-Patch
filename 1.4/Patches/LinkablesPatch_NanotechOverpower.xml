<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--
        ========== Nanotech Overpower ==========

        Nanofabricator
    -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Nanotech Overpower</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
                <!-- ========== Even More Linkables ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Even More Linkables</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- Nanofabricator -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName="Nanofabricator"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
									<li>HobbesLink_CNCMachine</li>
									<li>HobbesLink_3DPrinter</li>
									<li>HobbesLink_RobotAssistant</li>
									<li>HobbesLink_Lathe</li>
									<li>HobbesLink_Vice</li>
									<li>HobbesLink_Autoclave</li>
									<li>HobbesLink_Centrifuge</li>
									<li>HobbesLink_LaserEngraver</li>
									<li>HobbesLink_Incinerator</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

                <!-- ========== Medieval Overhaul ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Medieval Overhaul</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- Nanofabricator -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName="Nanofabricator"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>DankPyon_ToolRack</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== UN-Furniture ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>UN-Furniture (Continued)</li>
                    </mods>

                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- Nanofabricator -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName="Nanofabricator"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>SadjuukShaper</li>
                                    <li>SadjuukGrinding</li>
                                    <li>SadjuukLathe</li>
                                    <li>SadjuukMilling</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== Vanilla Furniture Expanded - Production ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Furniture Expanded - Production</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- Nanofabricator -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName="Nanofabricator"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>VFE_MachiningCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>

                <!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>WorkBench Support - More Linkable Facilities -</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <!-- Nanofabricator -->
                            <li Class="PatchOperationAdd">
                                <xpath>Defs/ThingDef[defName="Nanofabricator"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                                <value>
                                    <li>Link_MachiningGoods</li>
                                    <li>Link_MachiningBoost</li>
                                    <li>Link_UniversalCabinet</li>
                                </value>
                            </li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>