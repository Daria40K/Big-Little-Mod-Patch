<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Nuclear Energy</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- UraniumRefinery -->
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="UraniumRefinery"]/comps/li[@Class ="CompProperties_AffectedByFacilities"]</xpath>
					<nomatch Class="PatchOperationConditional">
						<xpath>Defs/ThingDef[defName="UraniumRefinery"]/comps</xpath>
						<match Class="PatchOperationAdd">
							<xpath>Defs/ThingDef[defName="UraniumRefinery"]/comps</xpath>
							<value>
								<li Class="CompProperties_AffectedByFacilities">
									<linkableFacilities />
								</li>
							</value>
						</match>
						<nomatch Class="PatchOperationAdd">
							<xpath>Defs/ThingDef[defName="UraniumRefinery"]</xpath>
							<value>
								<comps>
									<li Class="CompProperties_AffectedByFacilities">
										<linkableFacilities/>
									</li>
								</comps>
							</value>
						</nomatch>
					</nomatch>
				</li>
				<!-- ========== Core ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Core</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- UraniumRefinery -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="UraniumRefinery"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>ToolCabinet</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== Akeron - Decorations ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Akeron - Decorations</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- UraniumRefinery -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="UraniumRefinery"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>AKN_MotivatingPlush</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== Cybernetic Storm ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Cybernetic Storm</li>
					</mods>
					<match Class="PatchOperationSequence">
