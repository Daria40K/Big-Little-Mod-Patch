<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ryuu's Electric Butcher Table</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ========== Akeron - Decorations ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Akeron - Decorations</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- ElectricButcherTable -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="ElectricButcherTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>AKN_MotivatingPlush</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== Dark Ages : Medieval Tools ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Dark Ages : Medieval Tools</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- ElectricButcherTable -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="ElectricButcherTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>DA_ButcheringTools</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== Gloomy Extra - Kitchen (Continued) ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Gloomy Extra - Kitchen (Continued)</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- ElectricButcherTable -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="ElectricButcherTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>SM_Sink</li>
									<li>SM_ButcherShelf</li>
									<li>SM_KitchenCupboard_A</li>
									<li>SM_KitchenCupboard_B</li>
									<li>SM_KitchenCupboard_C</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== More Linkables ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>More Linkables</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- ElectricButcherTable -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="ElectricButcherTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>KitchenCupboard</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<!-- ========== WorkBench Support - More Linkable Facilities - ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>WorkBench Support - More Linkable Facilities -</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<!-- ElectricButcherTable -->
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="ElectricButcherTable"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
								<value>
									<li>Link_ButcherGoods</li>
									<li>Link_ButcherBoost</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>